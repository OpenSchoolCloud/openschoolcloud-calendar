<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_event_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingVertical="5dp"
    android:paddingHorizontal="2dp">

    <!-- Calendar color dot (ImageView â€” View is not in RemoteViews whitelist) -->
    <ImageView
        android:id="@+id/widget_event_color"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/widget_color_dot"
        android:contentDescription="@null"
        android:importantForAccessibility="no" />

    <!-- Time range -->
    <TextView
        android:id="@+id/widget_event_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="70dp"
        android:textColor="#3B9FD9"
        android:textSize="12sp"
        android:textStyle="bold"
        tools:text="09:00 - 10:30" />

    <!-- Title -->
    <TextView
        android:id="@+id/widget_event_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="6dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="#333333"
        android:textSize="13sp"
        tools:text="Teamoverleg" />

    <!-- Location (optional) -->
    <TextView
        android:id="@+id/widget_event_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:maxWidth="80dp"
        android:textColor="#888888"
        android:textSize="11sp"
        android:visibility="gone"
        tools:text="Lokaal 2.13"
        tools:visibility="visible" />

</LinearLayout>
